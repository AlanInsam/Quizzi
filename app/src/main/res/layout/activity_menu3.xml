<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shapy.appz.Menu3"
    android:id="@+id/drawerLayout3"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <include
        layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/about"
            android:paddingTop="25dp"
            android:text="Alan Insam"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="78dp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignStart="@+id/imageView5"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a sixteen years old student based in Italy "
            android:layout_above="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I programmed/designed the app"
            android:layout_marginBottom="29dp"
            android:layout_above="@+id/textView11"
            android:layout_centerHorizontal="true" />



        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/abone"
            android:layout_marginTop="92dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Special thanks to:"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Nathan Runggaldier"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@+id/textView11"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/qlist"
            android:layout_below="@+id/textView11"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="For lots of tricky questions and ideas!"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />



        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_feedback_black_24dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView14"
            android:layout_alignStart="@+id/textView14"
            android:tint="#f60"/>

        <TextView
            android:id="@+id/feedbackTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="18dp"
            android:textColor="#f60"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/toggle_text_view"
            android:alpha="0.4"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />


    </RelativeLayout>

<android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu3"
        android:layout_gravity="start"
        android:id="@+id/nv3"
        app:headerLayout="@layout/navigation_header"
        app:itemIconTint="@drawable/tint_color_selector2">




    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
