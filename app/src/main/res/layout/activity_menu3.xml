<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amapps.impossiblequiz.Menu3"
    android:id="@+id/drawerLayout3">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <include
        layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/about"
            android:paddingTop="40dp"
            android:text="Alan Insam"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="116dp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignStart="@+id/imageView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a sixteen years old student based in Italy"
            android:layout_above="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:paddingBottom="6dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I programmed/designed the app"
            android:layout_alignBottom="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"/>



        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abone"
            android:layout_marginTop="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:text="Special thanks to:"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Nathan Runggaldier"
            android:textColor="#f60"
            android:layout_below="@+id/textView11"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/qlist"
            android:layout_below="@+id/textView11"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="For lots of tricky questions and ideas!"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />

    </RelativeLayout>

<android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu3"
        android:layout_gravity="start"
        android:id="@+id/nv3"
        app:headerLayout="@layout/navigation_header"
        app:itemIconTint="@drawable/tint_color_selector2">




    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
