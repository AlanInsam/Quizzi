<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shapy.appz.Menu2"
    android:id="@+id/drawerLayout2"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <include
            layout="@layout/navigation_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="302dp">


            <TextView
                android:id="@+id/textScore2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="28dp"
                android:background="#f60"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Your score is:"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textHighScore"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textScore2"
                android:layout_marginTop="13dp"
                android:background="#FFAB00"
                android:paddingLeft="35dp"
                android:paddingRight="100dp"
                android:paddingTop="10dp"
                android:text="Highest score:"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/tryAgain_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textHighScore"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_pill"
                android:onClick="onClick"
                android:text="Restart Quiz!"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:text="Stats: play and get trophies!"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="20dp" />


            <ImageView
                android:id="@+id/statsTrophy"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/tryAgain_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textHighScore"
                app:srcCompat="@drawable/statsoftrophy" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tryAgain_button">

            <ImageView
                android:id="@+id/trophy1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/trophy1"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/trophy2"
                android:layout_toStartOf="@+id/trophy2" />

            <Button
                android:id="@+id/enablePOPUP"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:alpha="0.30"
                android:background="@drawable/toggle_img"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/trophy1"
                android:layout_alignStart="@+id/trophy1"
                android:layout_alignBottom="@+id/trophy1" />

            <ImageView
                android:id="@+id/trophy2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/trophy2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/enablePOPUP2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:alpha="0.30"
                android:background="@drawable/toggle_img"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/trophy1"
                android:layout_alignRight="@+id/trophy2"
                android:layout_alignEnd="@+id/trophy2"
                android:layout_alignBottom="@+id/trophy2" />

            <ImageView
                android:id="@+id/trophy3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/trophy3"
                android:layout_marginRight="53dp"
                android:layout_marginEnd="53dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/enablePOPUP3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:alpha="0.30"
                android:background="@drawable/toggle_img"
                android:visibility="invisible"
                android:layout_alignLeft="@+id/trophy3"
                android:layout_alignStart="@+id/trophy3"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/trophy3"
                android:layout_alignRight="@+id/trophy3"
                android:layout_alignEnd="@+id/trophy3" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trophy4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/trophy4"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/trophy5"
                android:layout_toStartOf="@+id/trophy5"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:id="@+id/trophy5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/trophy5"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/trophy6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/trophy6"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/trophy5"
                android:layout_toEndOf="@+id/trophy5"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" />

            <Button
                android:id="@+id/enablePOPUP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.30"
                android:visibility="invisible"
                android:background="@drawable/toggle_img"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/trophy4"
                android:layout_alignEnd="@+id/trophy4"
                android:layout_alignBottom="@+id/trophy4"
                android:layout_alignLeft="@+id/trophy4"
                android:layout_alignStart="@+id/trophy4" />

            <Button
                android:id="@+id/enablePOPUP5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.30"
                android:visibility="invisible"
                android:background="@drawable/toggle_img"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/trophy5"
                android:layout_alignEnd="@+id/trophy5"
                android:layout_alignBottom="@+id/trophy5"
                android:layout_alignLeft="@+id/trophy5"
                android:layout_alignStart="@+id/trophy5" />

            <Button
                android:id="@+id/enablePOPUP6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.30"
                android:visibility="invisible"
                android:background="@drawable/toggle_img"
                android:layout_alignBottom="@+id/trophy6"
                android:layout_alignRight="@+id/trophy6"
                android:layout_alignEnd="@+id/trophy6"
                android:layout_alignLeft="@+id/trophy6"
                android:layout_alignStart="@+id/trophy6"
                android:layout_alignParentTop="true" />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#000"
        android:alpha="0.95"
        android:id="@+id/bgpop">

    </RelativeLayout>



    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu2"
        android:layout_gravity="start"
        android:id="@+id/nv2"
        app:headerLayout="@layout/navigation_header"
        app:itemIconTint="@drawable/tint_color_selector2">




    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
