<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shapy.appz.QuizActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/drawerLayout">


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <include layout="@layout/navigation_action"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
          />



          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text ="SCORE"
              android:id="@+id/score_text"
              android:textSize="20sp"
              android:textColor="#000"
              android:layout_marginTop="70dp"
              android:layout_alignParentTop="true"
              android:layout_toRightOf="@+id/imageView2"
              android:layout_toEndOf="@+id/imageView2"
              android:layout_marginLeft="11dp"
              android:layout_marginStart="11dp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text ="0"
              android:id="@+id/score_score"
              android:textSize="20sp"
              android:textColor="#000"
              android:layout_marginRight="20dp"
              android:layout_marginTop="20dp"
              android:layout_alignBaseline="@+id/score_text"
              android:layout_alignBottom="@+id/score_text"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true" />


          <TextView
              android:id="@+id/question"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/score_text"
              android:layout_marginTop="19dp"
              android:padding="8dp"
              android:text="When was the European Union founded?"
              android:textAlignment="center"
              android:textColor="#000"
              android:textSize="20sp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1993"
        android:background="#f60"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:id="@+id/choice1"
        android:textSize="17dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/question"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1986"
        android:background="#f60"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:id="@+id/choice2"
        android:textSize="17dp"
        android:layout_below="@+id/choice1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "1967"
        android:background="#f60"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:id="@+id/choice3"
        android:textSize="17dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/choice2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


          <ImageView
              android:id="@+id/imageView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="13dp"
              android:layout_marginStart="13dp"
              app:srcCompat="@android:drawable/star_big_on"
              android:layout_above="@+id/question"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />



          <TextView
              android:id="@+id/tutorialTXT"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Info"
              android:textSize="18dp"
              android:textColor="#f60"
              android:textStyle="bold"
              android:padding="8dp"
              android:layout_marginBottom="43dp"
              android:layout_alignParentBottom="true"
              android:layout_toRightOf="@+id/imageView7"
              android:layout_toEndOf="@+id/imageView7" />

          <TextView
              android:id="@+id/shareTXT"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Challenge"
              android:padding="8dp"
              android:textSize="18dp"
              android:textColor="#f60"
              android:textStyle="bold"
              android:layout_alignBaseline="@+id/tutorialTXT"
              android:layout_alignBottom="@+id/tutorialTXT"
              android:layout_toRightOf="@+id/imageView8"
              android:layout_toEndOf="@+id/imageView8" />

          <ImageView
              android:id="@+id/imageView7"
              android:layout_width="25dp"
              android:layout_height="25dp"
              app:srcCompat="@mipmap/ic_info_outline_black_24dp"
              android:tint="#f60"
              android:paddingTop="5.5dp"
              android:layout_alignTop="@+id/tutorialTXT"
              android:layout_toStartOf="@+id/score_text"
              android:layout_alignBottom="@+id/imageView8"
              android:layout_toLeftOf="@+id/score_text" />

          <ImageView
              android:id="@+id/imageView8"
              android:layout_width="34dp"
              android:layout_height="34dp"
              app:srcCompat="@mipmap/ic_people_outline_black_24dp"
              android:tint="#f60"
              android:paddingTop="5dp"
              android:layout_alignTop="@+id/shareTXT"
              android:layout_toRightOf="@+id/tutorialTXT"
              android:layout_toEndOf="@+id/tutorialTXT"
              android:layout_marginLeft="13dp"
              android:layout_marginStart="13dp" />

          <TextView
              android:id="@+id/share"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/toggle_text_view"
              android:alpha="0.4"
              android:layout_alignTop="@+id/shareTXT"
              android:layout_alignLeft="@+id/imageView8"
              android:layout_alignStart="@+id/imageView8"
              android:layout_alignRight="@+id/shareTXT"
              android:layout_alignEnd="@+id/shareTXT" />

          <Button
              android:id="@+id/dialogbtn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/share"
              android:layout_alignLeft="@+id/imageView7"
              android:layout_alignStart="@+id/imageView7"
              android:layout_alignRight="@+id/tutorialTXT"
              android:layout_alignEnd="@+id/tutorialTXT"
              android:layout_alignTop="@+id/tutorialTXT"
              android:background="@drawable/toggle_text_view"
              android:alpha="0.4"/>

          <ImageView
              android:id="@+id/imageView14"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:tint="#f60"
              app:srcCompat="@mipmap/ic_settings_black_24dp"
              android:layout_alignTop="@+id/shareTXT"
              android:layout_toLeftOf="@+id/score_score"
              android:layout_toStartOf="@+id/score_score"
              android:layout_alignBottom="@+id/share" />

          <Button
              android:id="@+id/dialogbtn2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignEnd="@+id/imageView14"
              android:layout_alignRight="@+id/imageView14"
              android:layout_alignTop="@+id/imageView14"
              android:background="@drawable/toggle_text_view"
              android:alpha="0.4"
              android:layout_alignLeft="@+id/imageView14"
              android:layout_alignStart="@+id/imageView14"
              android:layout_alignBottom="@+id/shareTXT" />


      </RelativeLayout>



        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            android:id="@+id/nv1"
            app:headerLayout="@layout/navigation_header"
            app:itemIconTint="@drawable/tint_color_selector">

        </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
    

